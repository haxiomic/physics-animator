{
  "name": "physics-animator",
  "version": "0.2.0",
  "author": "haxiomic (George Corney)",
  "license": "MIT",
  "type": "module",
  "description": "A TypeScript animation system grounded in physics with three.js and react support.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./*": {
      "types": "./dist/types/*/index.d.ts",
      "import": "./dist/esm/*/index.js",
      "require": "./dist/cjs/*/index.js"
    }
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "prepack": "npm run clean && npm run build",
    "build": "npm run clean && npm run build-esm && npm run build-cjs",
    "build-esm": "tsc --project tsconfig.json && echo '{\"type\": \"module\"}' > dist/esm/package.json",
    "build-cjs": "tsc --project tsconfig.cjs.json && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "clean": "rm -rf dist",
    "dev": "tsc --watch"
  },
  "devDependencies": {
    "@types/react": "^19.0.12",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@haxiomic/event-signal": "^1.0.0",
    "use-initializer": "^1.0.2"
  },
  "peerDependencies": {
    "@types/three": "x.x.x",
    "react": ">=18.2.0",
    "three": "x.x.x"
  },
  "peerDependenciesMeta": {
    "@types/three": {
      "optional": true
    },
    "three": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  }
}
