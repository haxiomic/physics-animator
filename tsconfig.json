{
    "compilerOptions": {
        "strict": true,
        "noEmit": false,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "allowArbitraryExtensions": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "jsx": "react",
        "outDir": "./dist/esm",
        "rootDir": "./src",
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}